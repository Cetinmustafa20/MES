<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Mesajla≈üma</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f7fa;
      font-family: 'Arial', sans-serif;
      overflow-x: hidden;
    }

    /* Sidebar */
    .sidebar {
      height: 100vh;
      background: linear-gradient(135deg, #00bcd4, #00796b); /* Renk ge√ßi≈üi */
      color: white;
      padding: 30px 20px;
      box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.1);
      border-radius: 10px 0 0 10px; /* Yuvarlak k√∂≈üe */
      animation: slideIn 0.5s ease-in-out; /* Sidebar giri≈ü animasyonu */
    }

    .sidebar h5 {
      padding: 10px;
      margin-bottom: 30px;
      font-weight: bold;
      font-size: 1.3rem;
      text-align: center;
    }

    .sidebar ul {
      list-style: none;
      padding-left: 0;
    }

    .sidebar li {
      padding: 15px;
      cursor: pointer;
      border-radius: 8px;
      transition: background-color 0.3s ease, transform 0.2s;
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .sidebar li:hover, .sidebar .active {
      background-color: rgba(255, 255, 255, 0.2); /* Hover efekti */
      transform: scale(1.05);
    }

    .sidebar li a {
      color: white;
      text-decoration: none;
      font-size: 1rem;
      width: 100%;
      display: flex;
      align-items: center;
    }

    .sidebar li i {
      margin-right: 10px; /* ƒ∞konlar i√ßin bo≈üluk */
    }

    /* Mesajla≈üma Alanƒ± */
    .chat-container {
      display: flex;
      flex-direction: column;
      height: 100vh;
      animation: fadeIn 1s ease-in-out; /* Chat alanƒ± giri≈ü animasyonu */
    }

    .chat-messages {
      flex-grow: 1;
      padding: 20px;
      background-color: white;
      overflow-y: auto;
      border-left: 2px solid #ddd;
      box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.5s ease-in-out; /* Mesajlarƒ±n kayarak gelmesi */
    }

    .message {
      margin-bottom: 20px;
      animation: slideIn 0.5s ease-in-out forwards;
    }

    .message .sender {
      font-weight: bold;
      color: #495057;
    }

    .message .text {
      margin-top: 5px;
      padding: 10px;
      border-radius: 10px;
      background-color: #f1f1f1;
      word-wrap: break-word;
    }

    .message .text.sent {
      background-color: #d1e7dd;
    }

    /* Mesaj G√∂nderme Alanƒ± */
    .chat-input {
      padding: 15px;
      background-color: #fff;
      border-top: 2px solid #ddd;
      display: flex;
      align-items: center;
      animation: fadeIn 1s ease-in-out;
    }

    .chat-input input {
      flex-grow: 1;
      padding: 10px;
      border-radius: 20px;
      border: 1px solid #ddd;
      margin-right: 10px;
    }

    .chat-input button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 20px;
    }

    .chat-input button:hover {
      background-color: #0056b3;
    }

    /* Animasyonlar */
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideIn {
      from {
        transform: translateX(20px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 sidebar">
        <h5>üóÇÔ∏è Odalar</h5>
        <ul>
          <% odalar.forEach(oda => { %>
            <li class="<%= oda.ad === aktifOdaId ? 'active' : '' %>">
              <a href="/mesajlasma/<%= oda.ad %>">
                <i class="fas fa-comment-dots"></i> üó®Ô∏è <%= oda.ad %>
              </a>
            </li>
          <% }); %>
        </ul>

        <!-- Yeni Oda Olu≈üturma Formu -->
        <form action="/mesajlasma/yeni-oda/gonder" method="POST" class="p-3">
          <div class="input-group">
            <input type="text" name="odaAdi" class="form-control" placeholder="Yeni oda adƒ±" required>
            <button class="btn btn-success" type="submit">+</button>
          </div>
        </form>
      </div>

      <!-- Chat Window -->
      <div class="col-md-9 chat-container">
        <div class="chat-messages" id="chatBox">
          <!-- Mesajlarƒ± Listeleme -->
          <% mesajlar.forEach(msg => { %>
            <div class="message">
              <div class="sender"><%= msg.senderId %></div>
              <div class="text <%= msg.senderId === userId ? 'sent' : '' %>">
                <%= msg.message %>
              </div>
              <div class="small text-muted"><%= new Date(msg.timestamp).toLocaleString() %></div>
            </div>
          <% }); %>
        </div>

        <!-- Mesaj G√∂nderme Formu -->
        <form action="/mesajlasma/<%= aktifOdaId %>" method="POST" class="chat-input">
          <input type="text" name="mesaj" class="form-control me-2" placeholder="Mesajƒ±nƒ±zƒ± yazƒ±n..." required>
          <button type="submit" class="btn btn-primary">G√∂nder</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Sayfa y√ºklendiƒüinde sohbet penceresinin altƒ±na kaydƒ±r
    const chatBox = document.getElementById('chatBox');
    chatBox.scrollTop = chatBox.scrollHeight;
  </script>
</body>
</html>
