<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>MES Ana Sayfa</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.4rem;
    }
    .table td, .table th {
      vertical-align: middle;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">MES Sistemi</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/" class="nav-link">🏠 Ana Sayfa</a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link">🛠️ Admin Paneli</a>
          </li>
          <li class="nav-item">
            <a href="/ekle" class="nav-link">➕ Yeni Kayıt</a>
          </li>
          
          <li class="nav-item">
            <a href="/logout" class="nav-link">🚪 Çıkış</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- İçerik -->
  <div class="container mt-4">
    <h3 class="mb-4">📋 Üretim Kayıtları</h3>

    <% if (kayitlar.length === 0) { %>
      <div class="alert alert-info">Henüz kayıt bulunmamaktadır.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover bg-white shadow-sm">
          <thead class="table-light">
            <tr>
              <th>Makine</th>
              <th>Operatör</th>
              <th>Başlangıç</th>
              <th>Bitiş</th>
              <th>Durum</th>
              <th>İşlem</th>
            </tr>
          </thead>
          <tbody>
            <% kayitlar.forEach(kayit => { %>
              <tr>
                <td><%= kayit.makina %></td>
                <td><%= kayit.operator %></td>
                <td><%= kayit.baslangic || "-" %></td>
                <td><%= kayit.bitis || "-" %></td>
                <td>
                  <% if (kayit.bitis) { %>
                    <span class="badge bg-success">✅ Tamamlandı</span>
                  <% } else if (kayit.iptal) { %>
                    <span class="badge bg-danger">❌ İptal Edildi</span>
                  <% } else { %>
                    <span class="badge bg-warning text-dark">🔄 Devam Ediyor</span>
                  <% } %>
                </td>
                <td>
                  <% if (!kayit.bitis && !kayit.iptal) { %>
                    <form method="POST" action="/tamamla/<%= kayit._id %>" class="d-inline">
                      <button class="btn btn-success btn-sm">Tamamla</button>
                    </form>
                    <form method="POST" action="/iptal/<%= kayit._id %>" class="d-inline">
                      <button class="btn btn-danger btn-sm">İptal Et</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">-</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
